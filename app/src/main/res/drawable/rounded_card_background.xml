<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the flashcard -->
    <solid android:color="@color/AccountStrokeButton" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Padding around the card content -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Border styling -->
    <stroke android:width="2dp" android:color="@android:color/darker_gray" />
</shape>
